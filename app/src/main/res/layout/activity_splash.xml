<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    tools:context="com.example.ducdv.uiteducation.ui.activity.SplashActivity">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/backgproud"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_version"
        android:text="@string/app_ver"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/splashTextColor"
        android:typeface="serif"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_copyright"
        android:text="@string/copyright"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/splashTextColor"
        android:typeface="serif"/>

</LinearLayout>
