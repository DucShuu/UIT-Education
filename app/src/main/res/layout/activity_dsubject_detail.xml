<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size8dp"
    android:background="#0a2020"
    tools:context="com.example.ducdv.uiteducation.ui.activity.DSubject.DSubjectDetail">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size35dp"
        android:layout_gravity="center"
        android:background="#440e541c"
        app:tabGravity="center"
        app:tabIndicatorColor="#2cbf1c"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#0d10d7"
        app:tabTextAppearance="@style/TitlePagerStyle"
        app:tabTextColor="#741919">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager">

    </android.support.v4.view.ViewPager>

</LinearLayout>
